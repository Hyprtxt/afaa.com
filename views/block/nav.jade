nav.navbar.navbar-main
  .container
    // Mobile Navigation
    .hidden-md-up
      button.navbar-toggler(data-toggle='collapse', data-target='#mobileNav') &#9776;
      a.pull-right.mobile-logo(href=navbarBrand.link) 
        img(src=assets+'/images/afaa.png', alt='Aerobics and Fitness Association of America')
      a(href='', title='Your Shopping Cart').m-l
        i.fa.fa-shopping-cart
      a(href='', title='Your Account').m-l-md
        i.fa.fa-user
      a(href='tel:214 799-3897').m-l-md
        i.fa.fa-phone
    // Regular Navigation
    ul.nav.navbar-nav.hidden-sm-down.pull-right
      each nav in navigation
        li.nav-item(class=nav.liclass)
          a.nav-link(href=nav.link, class=nav.class, id=nav.id) #{nav.title}
    .clearfix
    // Mobile Dropdown
    ul#mobileNav.nav.nav-pills.nav-stacked.collapse
      each nav in navigation
        li.nav-item
          a.nav-link(href=nav.link, class=nav.class, id=nav.id) #{nav.title}
      li.nav-item
