nav.navbar.navbar-mobile.navbar-main.navbar-fixed-top.hidden-md-up.b-b
  .container
    .row
      // Mobile Navigation
      button.navbar-toggler.pull-right(data-toggle='collapse', data-target='#mobileNav') 
        span.fa.fa-bars
      a.pull-left.mobile-logo(href=navbarBrand.link) 
        img(src=assets+'/images/afaa.png', alt='Aerobics and Fitness Association of America')
      //- a(href='', title='Your Shopping Cart').m-l
      //-   i.fa.fa-shopping-cart
      //- a(href='', title='Your Account').m-l-md
      //-   i.fa.fa-user
      a(href='tel:'+phone).m-l-md.mobile-phone
        i.fa.fa-phone
        |  #{phone}
      // Mobile Dropdown
      .clearfix
      ul#mobileNav.nav.nav-pills.nav-stacked.collapse.p-t
        each nav in navigation
          li.nav-item
            a.nav-link(href=nav.link, class=nav.class, id=nav.id) #{nav.title}
        li.nav-item
          a.nav-link(href='', title='Your Shopping Cart')
            i.fa.fa-shopping-cart
            |  Shopping Cart
        li.nav-item
          a.nav-link(href='https://shop.nasm.org/account.aspx', title='Your Account')
            i.fa.fa-user
            |  Account (Courses purchased 1/1/16 or later)
        li.nav-item
          a.nav-link(href='http://legacy.afaa.com', title='Your Account')
            i.fa.fa-user
            |  Account (Courses purchased through 12/31/15)
        li.nav-item
          a.nav-link(href='tel:'+phone)
            i.fa.fa-phone  
            |  #{phone}
